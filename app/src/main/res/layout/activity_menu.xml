<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/bg_wood"
    android:paddingTop="25dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/marydale_bold"
                android:textSize="@dimen/title_extra_big_size"
                android:textColor="@color/bg_toolbar"/>


        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:layout_marginLeft="@dimen/margin_medium"
            android:fontFamily="@font/marydale_bold"
            android:textSize="@dimen/title_extra_big_size"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bg_splash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_extra_big"
            android:layout_marginLeft="@dimen/margin_extra_big"
            android:layout_marginRight="@dimen/margin_extra_big"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_menu1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="AR 3D Scane\nImage"
                android:background="@drawable/bg_button_blue"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_medium"
                />

            <Button
                android:id="@+id/btn_menu2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AR 3D\nanimation"
                android:layout_marginLeft="@dimen/margin_medium"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_yellow"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_extra_big"
            android:layout_marginRight="@dimen/margin_extra_big"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_menu3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AR\nVideo"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_orange"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_medium"
                />

            <Button
                android:id="@+id/btn_menu4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AR Add\nObject"
                android:layout_marginLeft="@dimen/margin_medium"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_green"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_extra_big"
            android:layout_marginRight="@dimen/margin_extra_big"
            android:layout_marginBottom="@dimen/margin_extra_big"
            android:layout_weight="0.5"
            >

            <Button
                android:id="@+id/btn_menu5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AR Game"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_purpel"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>