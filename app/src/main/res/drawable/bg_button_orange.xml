<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/orange_dark" />
            <stroke
                android:width="3dp"
                android:color="@color/orange_light" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="@color/orange_dark" />
            <stroke
                android:width="3dp"
                android:color="@color/orange_light" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/orange_light"/>
            <stroke
                android:width="3dp"
                android:color="@color/orange_dark" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

</selector>
